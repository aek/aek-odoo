-->
<openerp>
    <data>
        <template id="assets_backend" name="browser_pdf assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/browser_pdf/static/lib/Print.js-1.0.13/dist/print.min.js"></script>
                <script type="text/javascript" src="/browser_pdf/static/src/js/browser_pdf.js"></script>
            </xpath>
        </template>

        <template id="assets_common" name="browser_pdf assets" inherit_id="report.layout">
            <meta name="viewport" position="after">
<style t-if="paperformat">
@media print (min-resolution: <t t-raw="paperformat['dpi']"/>dpi) {

}
@page {
    size: <t t-raw="paperformat['page-size']"/> <t t-raw="paperformat['orientation']"/>;
    margin-left: <t t-raw="paperformat['margin-left']"/>mm;
    margin-right: <t t-raw="paperformat['margin-right']"/>mm;
    margin-top: <t t-raw="paperformat['margin-top']"/>mm;
    margin-bottom: <t t-raw="paperformat['margin-bottom']"/>mm;
    @top-center {
        content: "axelllll"
    }
    @bottom-center {
        content: "axelllll footer"
    }
}
</style>
            </meta>
        </template>
    </data>
</openerp>
